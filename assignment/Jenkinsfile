pipeline {
    agent any

    environment {
        APP_NAME = "flask-app"
        DOCKER_IMAGE = "flask-app:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/beastguhan/one-data-structure.git'
            }
        }

        stage('Install & Test') {
            steps {
                echo "Installing Python dependencies..."
                sh 'pip install -r assignment/app/requirement.txt --break-system-packages'
                echo "✅ Python dependencies installed successfully!"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t $DOCKER_IMAGE -f assignment/Dockerfile assignment'
            }
        }

        stage('Run Container Test') {
            steps {
                echo "Running container test..."
                sh '''
                    docker run -d --name ${APP_NAME}-container -p 5000:5000 ${DOCKER_IMAGE}
                    sleep 5
                    curl -f http://localhost:5000 || (echo "❌ Flask app failed to start!" && exit 1)
                    echo "✅ Flask app is running successfully!"
                '''
            }
        }
    }

    post {
        always {
            echo "Cleaning up container..."
            sh 'docker rm -f ${APP_NAME}-container || true'
            echo "✅ Cleanup complete!"
        }

        success {
            echo "✅ Pipeline succeeded!"
        }

        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
