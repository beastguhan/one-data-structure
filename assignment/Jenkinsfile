pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/beastguhan/one-data-structure.git'
            }
        }

        stage('Install & Test') {
            steps {
                sh '''
                    echo "Installing Python dependencies..."
                    pip install -r app/requirements.txt --break-system-packages
                    echo "✅ Python dependencies installed successfully!"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "Building Docker image..."
                    docker build -t flask-app .
                    echo "✅ Docker image built successfully!"
                '''
            }
        }

        stage('Run Container Test') {
            steps {
                sh '''
                    echo "Running Docker container for test..."
                    docker run -d --name flask-app-container -p 5000:5000 flask-app
                    sleep 5
                    docker ps
                    echo "✅ Container is up and running!"
                '''
            }
        }
    }

    post {
        always {
            sh '''
                echo "Cleaning up container..."
                docker rm -f flask-app-container || true
                echo "✅ Cleanup complete!"
            '''
            echo "✅ Pipeline Finished"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}

